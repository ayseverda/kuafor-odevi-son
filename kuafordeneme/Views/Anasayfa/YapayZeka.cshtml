@{
    ViewData["Title"] = "Yapay Zeka Görsel Oluşturma";
}

<h2>@ViewData["Title"]</h2>

<!-- Hata mesajı gösterimi -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Fotoğraf ve saç stili yazma formu -->
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="photo">Fotoğrafınızı Yükleyin:</label>
        <input type="file" id="photo" name="photo" class="form-control" accept="image/*" />
    </div>

    <div class="form-group">
        <label for="hairStyle">Saç Stilini Yazın:</label>
        <input type="text" id="hairStyle" name="hairStyle" class="form-control" placeholder="Örneğin: Kısa kıvırcık saç" />
    </div>

    <button type="submit" class="btn btn-primary">Görsel Oluştur</button>
</form>

<!-- Orijinal fotoğrafı göster -->
@if (ViewBag.OriginalImage != null)
{
    <div class="mt-4">
        <h3>Yüklediğiniz Fotoğraf</h3>
        <img src="@ViewBag.OriginalImage" alt="Original Image" class="img-fluid" />
    </div>
}

<!-- Eğer yeni bir görsel varsa, o görseli göster -->
@if (ViewBag.ImageUrl != null)
{
    <div class="mt-4">
        <h3>Oluşturulan Görsel</h3>
        <img src="@ViewBag.ImageUrl" alt="Generated Image" class="img-fluid" />
    </div>
}
