@{
    ViewData["Title"] = "Yapay Zeka";
}

<h1>Saç Stili Önerisi</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="YapayZeka" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="photo">Fotoğraf Yükle</label>
        <input type="file" name="photo" id="photo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Saç Stili Önerisi Al</button>
</form>

@if (ViewBag.Suggestion != null)
{
    <h3>Önerilen Saç Stili:</h3>
    <p>@ViewBag.Suggestion</p>
}
