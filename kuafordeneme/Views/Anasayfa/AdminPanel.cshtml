@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Admin Paneli</h2>

    <!-- Admin için Yönetim Araçları -->
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcılar</h5>
                    <p class="card-text">Kullanıcıları görüntüle, düzenle veya sil.</p>
                    <a href="#" class="btn btn-primary">Kullanıcıları Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hizmet Ekle</h5>
                    <p class="card-text">Yeni hizmetler ekleyebilir ve düzenleyebilirsiniz.</p>
                    <a href="#" class="btn btn-success">Yeni Hizmet Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Raporlar</h5>
                    <p class="card-text">Sistemdeki işlemler ve kullanıcılar hakkında raporlar alabilirsiniz.</p>
                    <a href="#" class="btn btn-info">Raporları Görüntüle</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin İçin Diğer İstatistikler veya Yönetimsel Alanlar -->
    <div class="mt-4">
        <h4>İstatistikler</h4>
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Kullanıcı</h5>
                        <p class="card-text">300</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Hizmet</h5>
                        <p class="card-text">10</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Randevu</h5>
                        <p class="card-text">120</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Hizmet Talepleri</h5>
                        <p class="card-text">50</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
