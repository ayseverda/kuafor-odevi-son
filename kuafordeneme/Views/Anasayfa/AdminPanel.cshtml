@{
    ViewData["Title"] = "Admin Panel";
}


<div class="container">
    <h2 class="text-center mb-4">Admin Panel</h2>

    <!-- Sekmeler (Tab) -->
    <ul class="nav nav-tabs" id="adminTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="islem-tab" data-bs-toggle="tab" data-bs-target="#islem" type="button" role="tab">İşlem Yönetimi</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="calisan-tab" data-bs-toggle="tab" data-bs-target="#calisan" type="button" role="tab">Çalışan Yönetimi</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="randevu-tab" data-bs-toggle="tab" data-bs-target="#randevu" type="button" role="tab">Randevu Onayı</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="kullanici-tab" data-bs-toggle="tab" data-bs-target="#kullanici" type="button" role="tab">Kullanıcı Yönetimi</button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabContent">
        <!-- İşlem Yönetimi -->
        <div class="tab-pane fade show active" id="islem" role="tabpanel">
            <h4 class="mt-4">İşlem Yönetimi</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>İşlem Adı</th>
                        <th>Süre (dk)</th>
                        <th>Ücret (TL)</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* İşlem tablosunu buraya dökeceksiniz *@
                </tbody>
            </table>
            <button class="btn btn-primary">Yeni İşlem Ekle</button>
        </div>

        <!-- Çalışan Yönetimi -->
        <div class="tab-pane fade" id="calisan" role="tabpanel">
            <h4 class="mt-4">Çalışan Yönetimi</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Uzmanlık</th>
                        <th>Müsaitlik</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* Çalışan tablosunu buraya dökeceksiniz *@
                </tbody>
            </table>
            <button class="btn btn-primary">Yeni Çalışan Ekle</button>
        </div>

        <!-- Randevu Onayı -->
        <div class="tab-pane fade" id="randevu" role="tabpanel">
            <h4 class="mt-4">Randevu Onayı</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Müşteri Adı</th>
                        <th>İşlem</th>
                        <th>Çalışan</th>
                        <th>Tarih ve Saat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* Randevu tablosunu buraya dökeceksiniz *@
                </tbody>
            </table>
        </div>

        <!-- Kullanıcı Yönetimi -->
        <div class="tab-pane fade" id="kullanici" role="tabpanel">
            <h4 class="mt-4">Kullanıcı Yönetimi</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Rol</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* Kullanıcı tablosunu buraya dökeceksiniz *@
                    <script src="/js/admin.js"></script>

                </tbody>
            </table>
        </div>
    </div>
</div>
