    <!-- CSS Styling -->
    <style>
        .employee-carousel {
            display: flex;
            overflow-x: scroll; /* Yatay kaydırma */
            gap: 15px; /* Kartlar arasındaki boşluk */
            padding: 15px;
            scroll-snap-type: x mandatory; /* Kaydırmanın snappoint gibi görünmesini sağlarız */
            scrollbar-width: none; /* Mozilla Firefox için kaldırma */
            -ms-overflow-style: none; /* Internet Explorer için kaldırma */
        }

        .employee-card {
            flex: 0 0 auto; /* Esnek kartlar, belirlenen genişlikte olacak */
            width: 220px; /* Kart genişliği */
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background-color: white;
            text-align: center;
            scroll-snap-align: start; /* Her kartı ayrı snappoint olarak ayarlar */
        }

            .employee-card:hover {
                transform: scale(1.05); /* Kart üzerine geldiğinde biraz büyür */
            }

        .employee-img {
            width: 100%;
            height: 230px; /* Yüksekliği arttırdık, böylece fotoğraf daha dikine büyüyecek */
            object-fit: cover;
            border-radius: 8px 8px 0 0;
        }


        .employee-info {
            padding: 15px;
        }

        .employee-name {
            font-size: 16px;
            font-weight: bold;
        }

        .employee-role {
            font-size: 14px;
            color: #777;
        }
    </style>

    <!-- JavaScript for Wheel Event -->
    <script>
        const employeeCarousel = document.getElementById('employee-carousel');

        employeeCarousel.addEventListener('wheel', (event) => {
            if (event.deltaY !== 0) {
                // Eğer kaydırma hareketi yataysa
                employeeCarousel.scrollLeft += event.deltaY;
                event.preventDefault();
            }
        });
    </script>


